class Solution {
    public int maxProfit(int[] prices)
    {
        int n = prices.length;
        int cost = prices[0];
        int maxProfit = 0;

        for(int i =1; i< n;i++)
        {
            maxProfit = Math.max(maxProfit, prices[i] - cost);
            if(prices[i] < cost)
            {
                cost = prices[i];
            }
        }
        return maxProfit;
    }
}